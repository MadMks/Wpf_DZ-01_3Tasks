<Window x:Class="Task_3_RunningAwayButton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_3_RunningAwayButton"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid Name="gridForBtn">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
        </Grid>
        <Canvas Name="canvas">
            <Grid Name="fieldAround" 
                  MouseEnter="fieldAround_MouseEnter"
                  MouseMove="fieldAround_MouseMove" Background="CadetBlue">
                <Button Name="btnRun" Padding="8" Margin="25">Click me</Button>
            </Grid>
            <!--<Button Name="btnRun" Padding="8">Click me</Button>-->
        </Canvas>
    </Grid>
</Window>
